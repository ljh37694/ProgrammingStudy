<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body class="grey-bg">
        <%- include("nav.ejs"); %>

        <div class="detail-bg">
            <h4><%- post.title  %></h4>
            <p><%- post.content %></p>
        </div>

        
        <div class="comments">
            <h3>Comments</h3>
            <form action="/comment/<%= post._id %>" method="POST">
                <input name="comment">
                <button type="submit">전송</button>
            </form>
            <div class="comment-container">
                <% comments.forEach((comment) => { %>
                    <div class="comment-item">
                        <h4 class="writer-name"><%= comment.writer_name %>:</h4>
                        <p><%= comment.content %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </body>
</html>
